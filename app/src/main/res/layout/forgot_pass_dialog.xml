<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_border"
    android:backgroundTint="@color/white"
    android:padding="10dp">

    <EditText
        android:id="@+id/forgot_pass_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please your Email ID"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/forgot_pass_getpassbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_pass_edittext"
        android:text="Get Password"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>
</RelativeLayout>